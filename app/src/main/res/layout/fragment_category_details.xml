<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/category_details_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#121212"
    android:padding="24dp"
    tools:context=".ui.categoryDetails.CategoryDetailsFragment">

    <!-- GLASSY HEADER CARD -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/header_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="12dp"
        app:cardBackgroundColor="#1F1F1F"
        app:strokeWidth="1dp"
        app:strokeColor="#2A2A2A">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="24dp">

            <!-- CATEGORY TITLE -->
            <TextView
                android:id="@+id/category_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/categoryText_placeholder"
                android:textSize="20sp"
                android:textColor="#EEEEEE"
                android:letterSpacing="0.05"
                android:paddingBottom="4dp" />

            <!-- MONTHLY TOTAL -->
            <TextView
                android:id="@+id/monthly_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/total_category_expenses_placeholder"
                android:textSize="36sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:letterSpacing="0.03"
                android:paddingBottom="16dp" />

            <!-- ACTION BUTTONS -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/edit"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#7B1FA2"
                    app:cornerRadius="24dp"
                    android:layout_marginEnd="12dp"
                    app:icon="@drawable/outline_edit_24"
                    app:iconPadding="8dp"
                    app:iconTint="#FFFFFF"
                    app:iconGravity="textStart" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/delete"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#D32F2F"
                    app:cornerRadius="24dp"
                    android:layout_marginStart="12dp"
                    app:icon="@drawable/outline_delete_24"
                    app:iconPadding="8dp"
                    app:iconTint="#FFFFFF"
                    app:iconGravity="textStart" />
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- TRANSACTION LIST -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/transaction_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:paddingBottom="8dp"
        tools:listitem="@layout/transaction_entry_layout" />
</LinearLayout>