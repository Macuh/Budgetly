<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Amount -->
        <TextView
            android:id="@+id/amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Amount"
            android:textSize="32sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <!-- Sender name and date -->
        <TextView
            android:id="@+id/recipient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recipient"
            android:textSize="16sp"
            android:textColor="#4A90E2"
            android:layout_marginBottom="2dp"/>

        <TextView
            android:id="@+id/transaction_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="May 19, 12:53 PM"
            android:textSize="14sp"
            android:textColor="#CCCCCC"
            android:layout_marginBottom="16dp"/>

        <!-- Action Buttons -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="24dp">

            <Button
                android:id="@+id/btn_send"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Edit"/>

            <Button
                android:id="@+id/btn_request"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Split"
                android:layout_marginStart="8dp"/>

            <Button
                android:id="@+id/btn_organize_income"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Delete"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <!-- Transaction Info -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#1E1E1E"
            android:padding="12dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status"
                android:textColor="#AAAAAA"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Completed"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="8dp"/>
        </LinearLayout>

        <!-- Analytics Info -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#1E1E1E"
            android:padding="12dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category"
                android:textColor="#AAAAAA"/>
            <TextView
                android:id="@+id/categoryText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Transfers"
                android:textColor="#4A90E2"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bank"
                android:textColor="#AAAAAA"/>
            <TextView
                android:id="@+id/bankText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trade Republic"
                android:textColor="#4A90E2"/>
        </LinearLayout>

        <!-- Split Between -->
        <LinearLayout
            android:id="@+id/split_section"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#1E1E1E"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Split between"
                android:textColor="#AAAAAA"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"/>

            <!-- Dynamic container for split entries -->
            <LinearLayout
                android:id="@+id/split_list_container"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <!-- Totals -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#1E1E1E"
            android:padding="12dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total sent this month"
                android:textColor="#AAAAAA"/>

            <TextView
                android:id="@+id/total_sent_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="€30"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total received this month"
                android:textColor="#AAAAAA"/>

            <TextView
                android:id="@+id/total_received_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="€33"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/see_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="See all"
                android:textColor="#4A90E2"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
